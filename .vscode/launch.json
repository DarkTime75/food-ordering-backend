    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "runtimeVersion": "20",
            "name": "Start Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "program": "index.js", // https://stackoverflow.com/a/72575923
            "env": {
                "NODE_ENV": "local"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "runtimeVersion": "16.20.2",
            "name": "Debug Active file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "program": "${file}" // https://stackoverflow.com/a/72575923
        }
    ]
}